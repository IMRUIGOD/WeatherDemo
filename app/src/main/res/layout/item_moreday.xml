<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="370dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/item_more_txt_week"
        style="@style/layout_wrap"
        android:text="星期一"
        android:layout_marginTop="15dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/item_more_txt_date"
        style="@style/layout_wrap"
        android:text="6/12"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/item_more_img_weather"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/clear_daytime"/>

    <TextView
        android:id="@+id/item_more_txt_weather"
        style="@style/layout_wrap"
        android:text="晴"
        android:layout_marginTop="5dp"
        android:textSize="14dp" />



    <com.IMRUIGOD.weatherdemo.TemperatureView
        android:id="@+id/item_more_temp_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_more_txt_airSize"
            style="@style/layout_wrap"
            android:text="良 "
            android:layout_marginLeft="5dp"/>
        <View
            android:id="@+id/item_more_view_colordian"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_yellow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/item_more_txt_fx"
        style="@style/layout_wrap"
        android:text="西南风"
        android:layout_marginTop="10dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/item_more_txt_fl"
        style="@style/layout_wrap"
        android:text="3级"
        android:textSize="12dp" />
</LinearLayout>
